@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}   
<style>
    .row {
        --bs-gutter-x: 0rem;
    }
</style>
<div class="iq-navbar-header" style="height: 215px;">
    <div class="container-fluid iq-container">
        <div class="row">
            <div class="col-md-12">
                <div class="flex-wrap d-flex justify-content-between align-items-center">
                    <div>
                        <h1>Hello @Model.FirstName!</h1>
                        <p>Welcome, Admin! We appreciate your contributions to our mission.</p>
                    </div>
                    <div>
                        <a href="/Services/Create" class="btn btn-link btn-soft-light">
                            <svg class="icon-20" width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="10" y="2" width="4" height="20" fill="currentColor" />
                                <rect x="2" y="10" width="20" height="4" fill="currentColor" />
                            </svg>
                            Service
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="iq-header-img">
        <img src="~/Admin_assets/images/dashboard/top-header.png" alt="header" class="theme-color-default-img img-fluid w-100 h-100 animated-scaleX">
        <img src="~/Admin_assets/images/dashboard/top-header1.png" alt="header" class="theme-color-purple-img img-fluid w-100 h-100 animated-scaleX">
        <img src="~/Admin_assets/images/dashboard/top-header2.png" alt="header" class="theme-color-blue-img img-fluid w-100 h-100 animated-scaleX">
        <img src="~/Admin_assets/images/dashboard/top-header3.png" alt="header" class="theme-color-green-img img-fluid w-100 h-100 animated-scaleX">
        <img src="~/Admin_assets/images/dashboard/top-header4.png" alt="header" class="theme-color-yellow-img img-fluid w-100 h-100 animated-scaleX">
        <img src="~/Admin_assets/images/dashboard/top-header5.png" alt="header" class="theme-color-pink-img img-fluid w-100 h-100 animated-scaleX">
    </div>
</div>          <!-- Nav Header Component End -->
<!--Nav End-->
<div class="conatiner-fluid content-inner mt-n5 py-0">
    <div>
<div class="row">
    @foreach(var service in(List<Service>)(ViewBag.Services)){
        <div class="col-lg-4 p-2">
            <div class="card">
                 <div class="card-body">
                    <div class="d-flex justify-content-between mb-4">
                        <div class="">
                                    <h2>@service.Companions.Count()</h2>
                                    <h5>#Companions</h5>
                        </div>
                        <div class="">
                                    <a href="/Admin/Companions?serviceId=@service.ServiceId" class="text-decoration-none">
                                <div class="badge bg-success p-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(255, 255, 255, 1);transform: msFilter:;"><path d="M16.75 2h-10c-1.103 0-2 .897-2 2v16c0 1.103.897 2 2 2h10c1.103 0 2-.897 2-2V4c0-1.103-.897-2-2-2zm-10 18V4h10l.002 16H6.75z"></path><circle cx="11.75" cy="18" r="1"></circle></svg>
                                            Companion
                                </div>
                            </a>
                        </div>

                    </div>
                    <div class="d-flex  justify-content-start align-items-center mb-3">
                        <div class="pe-3">
                            @{
                                string imageBase64 = Convert.ToBase64String(service.Image);
                            }
                                    <img src="data:image;base64,@imageBase64" class="rounded-circle p-1 bg-dark" width="60" height="60" alt="Service Image">
                        </div>
                        <div>
                                    <h5 class="">@service.ServiceName</h5>
                        </div>
                    </div>
                    <div>
                                <small>@service.ServiceDescription</small>
                    </div>
                    <div>
                                <a asp-controller="Services" asp-action="Delete" asp-route-id="@service.ServiceId" class="btn btn-danger mb-2">Delete</a>
                                <a asp-controller="Services" asp-action="Edit" asp-route-id="@service.ServiceId" class="btn btn-primary mb-2">Edit</a>
                                <a asp-controller="Services" asp-action="Create" asp-route-id="@service.ServiceId" class="btn btn-success mb-2">
                        <svg class="icon-20" width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect x="10" y="2" width="4" height="20" fill="currentColor" />
                            <rect x="2" y="10" width="20" height="4" fill="currentColor" />
                        </svg>
                        Companion
                    </a>
                    </div>
                    
                </div>
            </div>
        </div>
    }
        </div>
    </div>
</div>