@model _5Dots.Models.Visa

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-transparent shadow-none d-flex justify-content-center mb-0 auth-card">
                <div class="card-body">
                    <h1>Details</h1>
                    <h4>Visa</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CVC)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CVC)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.VisaNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.VisaNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ExpDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ExpDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.User.Id)
                        </dd>
                    </dl>
                    <div class="mb-3">
                        <a asp-action="Edit" asp-route-id="@Model?.VisaId" class="btn btn-success w-100">Edit</a>
                    </div>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
