@model _5Dots.Models.Visa

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-transparent shadow-none d-flex justify-content-center mb-0 auth-card">
                <div class="card-body">

                    <h3>Are you sure you want to delete this?</h3>
                    <h4>Visa</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CVC)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CVC)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.VisaNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.VisaNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ExpDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ExpDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                  @*       <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserId)
                        </dd> *@
                    </dl>
                    <form asp-action="Delete" asp-controller="Visas">
                        <input type="hidden" asp-for="VisaId" />
                        <div class="mb-3">
                            <input type="submit" value="Delete" class="btn btn-danger w-100">
                        </div>
                        <div class="text-center">
                            <a asp-controller="Users" asp-action="Profile" class="btn btn-primary">Back To Profile</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
