@model _5Dots.Models.Visa

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-transparent shadow-none d-flex justify-content-center mb-0 auth-card">
                <div class="card-body">
                    <h1>Edit</h1>
                    <h4>Visa</h4>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="VisaId" />
                        <div class="mb-3">
                            <label asp-for="CVC" class="form-label"></label>
                            <input asp-for="CVC" class="form-control" />
                            <span asp-validation-for="CVC" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VisaNumber" class="form-label"></label>
                            <input asp-for="VisaNumber" class="form-control" />
                            <span asp-validation-for="VisaNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ExpDate" class="form-label"></label>
                            <input asp-for="ExpDate" class="form-control" />
                            <span asp-validation-for="ExpDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="submit" value="Save" class="btn btn-success w-100" />
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
