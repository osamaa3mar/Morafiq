@model _Morafiq.Models.User

@{
    ViewData["Title"] = "Create";
}
<style>
    /* Your existing styles remain unchanged */

    .role-selection {
        display: flex;
        justify-content: space-between;
    }

    .role-radio {
        margin-right: 10px;
    }
    .hidestuff{
        display:none;
    }
</style>
<div class="container" style="display: flex; justify-content: center;">
    <div class="registration-form">
        <div class="registration-header">
            Joining Morafiq
        </div>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3 role-selection">
                <label class="form-label">Select Role:</label>
                <div class="form-check role-radio">
                    <input class="form-check-input" type="radio" name="Role" value="User" checked>
                    <label class="form-check-label" for="Role">Customer</label>
                </div>
                <div class="form-check role-radio">
                    <input class="form-check-input" type="radio" name="Role" value="Companion">
                    <label class="form-check-label" for="Role">Companion</label>
                </div>
            </div>
            

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
            </div>

            <div class="mb-3 hidestuff">
                <label for="CompanionDescription" class="form-label">Companion Description:</label>
                <input for="CompanionDescription" name="CompanionDescription" class="form-control">
            </div>

            <div class="mb-3 hidestuff">
                <label for="CompanionPrice" class="form-label">Companion Price:</label>
                <input type="number" for="CompanionPrice" name="CompanionPrice" class="form-control">
            </div>

            <div class="form-group hidestuff">
                <label for="ServiceId" class="control-label">Service :</label>
                <select for="ServiceId" name="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>

            <div class="mb-3">
                <label class="form-label" for="FormFile">File Picture:</label>
                <input type="file" class="form-control" name="FormFile">
            </div>

            <div class="mb-3">
                <label class="form-label" for="Password">Password:</label>
                <input type="password" class="form-control" name="Password" autocomplete="new-password" aria-required="true">
            </div>

            <div class="mb-3">
                <label class="form-label" for="ConfirmPassword">Confirm Password:</label>
                <input type="password" class="form-control" name="ConfirmPassword" autocomplete="new-password" aria-required="true">
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success submit-btn" style="width: 100%;">Create</button>
            </div>
        </form>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get the radio buttons and hidden elements
        let choice = document.querySelectorAll('.form-check-input');
        let hiddenStuff = document.querySelectorAll('.hidestuff');

        // Add event listener to each radio button
        choice.forEach(function (radio) {
            radio.addEventListener('change', function () {
                // Check the value of the selected radio button
                if (radio.value === 'Companion') {
                    // Show hidden elements if Companion is selected
                    hiddenStuff.forEach(function (element) {
                        element.style.display = 'block';
                    });
                } else {
                    // Hide elements if Customer is selected
                    hiddenStuff.forEach(function (element) {
                        element.style.display = 'none';
                    });
                }
            });
        });
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}