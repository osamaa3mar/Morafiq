@model _5Dots.Models.User

@{
    ViewData["Title"] = "Create";
}
<style>
    .registration-form {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        width: 400px;
    }

    .registration-header {
        text-align: center;
        font-size: 24px;
        color: #28a745;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .submit-btn {
        background-color: #28a745;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>
<div class="container" style="display: flex;justify-content: center;">
    <div class="registration-form">
        <div class="registration-header">
            Joining 5Dots
        </div>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label" for="FormFile">File Picture:</label>
                <input type="file" class="form-control" name="FormFile">
            </div>

            <div class="mb-3">
                <label class="form-label" for="Password">Password:</label>
                <input type="password" class="form-control" name="Password" autocomplete="new-password" aria-required="true">
            </div>

            <div class="mb-3">
                <label class="form-label" for="ConfirmPassword">Confirm Password:</label>
                <input type="password" class="form-control" name="ConfirmPassword" autocomplete="new-password" aria-required="true">
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success submit-btn" style="width: 100%;">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}